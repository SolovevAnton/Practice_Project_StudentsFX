<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0"
            prefWidth="300.0" stylesheets="@primer-light.css" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.solovev.controllers.StudentFormController">
    <children>
        <GridPane layoutX="10.0" layoutY="20.0" prefHeight="116.0" prefWidth="280.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Name: "/>
                <Label text="Num:" GridPane.rowIndex="1"/>
                <Label text="Salary:" GridPane.rowIndex="2"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1"/>
                <TextField fx:id="numField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="salaryField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
        <Button layoutX="216.0" layoutY="150.0" mnemonicParsing="false" onAction="#saveButton" prefHeight="36.0"
                prefWidth="70.0" styleClass="success" text="Save"/>
        <Button layoutX="14.0" layoutY="150.0" mnemonicParsing="false" onAction="#declineButton" styleClass="danger"
                text="Decline"/>
    </children>
